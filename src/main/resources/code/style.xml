<!DOCTYPE RSyntaxTheme SYSTEM "theme.dtd">

<!--
	Dark theme based off of Notepad++'s Obsidian theme.
	See theme.dtd and org.fife.ui.rsyntaxtextarea.Theme for more information.
-->
<RSyntaxTheme version="1.0">

    <!-- Omitting baseFont will use a system-appropriate monospaced. -->
    <!--<baseFont family="..." size="13"/>-->

    <!--  General editor colors. -->
    <background color="1e1e1e" />
    <caret color="4ec9b0" />
    <selection useFG="false" bg="3b3b3b"/>
    <currentLineHighlight color="2F393C"/>
    <marginLine fg="394448" />
    <markAllHighlight color="6b8189" />
    <!-- TODO: Fix me -->
    <markOccurrencesHighlight color="5b7179"/>
    <matchedBracket fg="6A8088" bg="6b8189" animate="true" />
    <hyperlinks fg="a082bd" />
    <secondaryLanguages>
        <language index="1" bg="333344" />
        <language index="2" bg="223322" />
        <language index="3" bg="332222" />
    </secondaryLanguages>

    <!-- Gutter styling. -->
    <gutterBorder color="81969A" />
    <lineNumbers fg="81969A" />
    <foldIndicator fg="6A8088" iconBg="2f383c" iconArmedBg="3f484c" />
    <iconRowHeader activeLineRange="3399ff" />

    <!-- Syntax tokens. -->
    <tokenStyles>
        <style token="IDENTIFIER" fg="ffffff" />
        <style token="RESERVED_WORD" fg="569cd6" bold="true" />
        <style token="RESERVED_WORD_2" fg="4ec9b0" bold="true" />
        <style token="ANNOTATION" fg="4ec9b0" />
        <style token="COMMENT_DOCUMENTATION" fg="608b4e" />
        <style token="COMMENT_EOL" fg="608b4e" />
        <style token="COMMENT_MULTILINE" fg="608b4e" />
        <style token="COMMENT_KEYWORD" fg="608b4e" />
        <style token="COMMENT_MARKUP" fg="608b4e" />
        <style token="FUNCTION" fg="dcdcaa" />
        <style token="DATA_TYPE" fg="b5cea8" bold="true" />
        <style token="LITERAL_BOOLEAN" fg="b5cea8" bold="true" />
        <style token="LITERAL_NUMBER_DECIMAL_INT" fg="b5cea8" />
        <style token="LITERAL_NUMBER_FLOAT" fg="b5cea8" />
        <style token="LITERAL_NUMBER_HEXADECIMAL" fg="b5cea8" />
        <style token="LITERAL_STRING_DOUBLE_QUOTE" fg="ce9178" />
        <style token="LITERAL_CHAR" fg="ce9178" />
        <style token="LITERAL_BACKQUOTE" fg="d7ba77" />
        <style token="MARKUP_TAG_DELIMITER" fg="678CB1" />
        <style token="MARKUP_TAG_NAME" fg="ABBFD3" bold="true" />
        <style token="MARKUP_TAG_ATTRIBUTE" fg="B3B689" />
        <style token="MARKUP_TAG_ATTRIBUTE_VALUE" fg="e1e2cf" />
        <style token="MARKUP_COMMENT" fg="66747B" />
        <style token="MARKUP_DTD" fg="A082BD" />
        <style token="MARKUP_PROCESSING_INSTRUCTION" fg="A082BD" />
        <style token="MARKUP_CDATA" fg="d5e6f0" />
        <style token="MARKUP_CDATA_DELIMITER" fg="ae9fbf" />
        <style token="MARKUP_ENTITY_REFERENCE" fg="678CB1" />
        <style token="OPERATOR" fg="d4d4d4" />
        <style token="PREPROCESSOR" fg="d4d4d4" />
        <style token="REGEX" fg="d4d4d4" />
        <style token="SEPARATOR" fg="E8E2B7" />
        <style token="VARIABLE" fg="ae9fbf" bold="true" />
        <style token="WHITESPACE" fg="E0E2E4" />

        <style token="ERROR_IDENTIFIER" fg="f44747" />
        <style token="ERROR_NUMBER_FORMAT" fg="f44747" />
        <style token="ERROR_STRING_DOUBLE" fg="f44747"/>
        <style token="ERROR_CHAR" fg="f44747" />
    </tokenStyles>

</RSyntaxTheme>
